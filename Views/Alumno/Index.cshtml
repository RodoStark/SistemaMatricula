
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<h2>Alumno</h2>
<label>Seleccione Sexo</label>
<select id="cboSexo">
</select>
<input type="button" id="btnBuscar" value="Buscar" class="btn btn-success" />
<input type="button" id="btnLimpiar" value="Limpiar" class="btn btn-primary" />
<!-- Trigger the modal with a button -->
<br />
<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>


<div id="tabla"></div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 id="lblTitulo" class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td width="40%">Id Alumno</td>
                        <td width="60%"><input class ="borrar" type="text" id="txtIdAlumno" readonly /></td>
                    </tr>
                    <tr>
                        <td>Ingrese nombre </td>
                        <td><input class ="borrar obligatorio form-control" type="text" id="txtNombre"/></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido paterno </td>
                        <td><input class ="borrar obligatorio form-control" id="txtApellidoPaterno" type="text"/></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido materno </td>
                        <td><input class ="borrar obligatorio form-control" id="txtApellidoMaterno" type="text"/></td>
                    </tr>
                    <tr>
                        <td>Ingrese sexo </td>
                        <td><select class ="borrar obligatorio" id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Nacimiento </td>
                        <td><input class ="borrar obligatorio form-control" id="dtFechaNacimiento" type="text"/></td>
                    </tr>
                    <tr>
                        <td>Ingrese teléfono padre </td>
                        <td><input class ="borrar obligatorio form-control" id="txtTelefonoPadre" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese teléfono madre </td>
                        <td><input class ="borrar obligatorio form-control" id="txtTelefonoMadre" type="number" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese número hermanos </td>
                        <td><input class ="borrar obligatorio form-control" id="txtNumhermanos" type="number" /></td>
                    </tr>

                </table>
            </div>
            <div class="modal-footer">
                <button onclick="agregar()" id="btnAceptar" type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
            </div>
        </div>

    </div>
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Alumno.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
