
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/datatables.css" rel="stylesheet" />
<link href="~/Content/jquery-ui.min.css" rel="stylesheet" />
<link href="~/Content/cssPropio.css" rel="stylesheet" />
<h2>Docente</h2>
<label>Ingrese modalidad contrato</label>
<select id="cboTipoModalidad">
</select>
<input type="button" id="btnBuscar" value="Buscar" class="btn btn-primary" />
<input type="button" id="btnLimpiar" value="Limpiar" class="btn btn-primary" />
<br />

<button type="button" onclick="abrirModal(0)" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Agregar</button>


<div id="tabla"></div>

<!-- Modal -->
<div id="myModal" class="modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
                <table style="width:80%;margin:auto">
                    <tr>
                        <td>Id Docente</td>
                        <td><input class="borrar" type="text" id="txtIdDocente" readonly></td>
                    </tr>
                    <tr>
                        <td>Ingrese nombre</td>
                        <td><input class="borrar obligatorio" type="text" id="txtNombre"></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido paterno</td>
                        <td><input class="borrar obligatorio" type="text" id="txtApellidoPaterno"></td>
                    </tr>
                    <tr>
                        <td>Ingrese apellido materno</td>
                        <td><input class="borrar obligatorio" type="text" id="txtApellidoMaterno"></td>
                    </tr>
                    <tr>
                        <td>Ingrese Direccion</td>
                        <td><input class="borrar obligatorio" type="text" id="txtDireccion"></td>
                    </tr>
                    <tr>
                        <td>Ingrese Telefono</td>
                        <td><input class="borrar obligatorio" type="number" id="txtTelefono"></td>
                    </tr>
                    <tr>
                        <td>Ingrese Celular</td>
                        <td><input class="borrar obligatorio" type="number" id="txtCelular"></td>
                    </tr>
                    <tr>
                        <td>Ingrese Email</td>
                        <td><input class="borrar obligatorio" type="email" id="txtEmail"></td>
                    </tr>
                    <tr>
                        <td>Ingrese sexo </td>
                        <td><select class="borrar obligatorio" id="cboSexoPopup"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Fecha Contrato </td>
                        <td><input class="borrar obligatorio" id="dtFechaContrato" type="text" /></td>
                    </tr>
                    <tr>
                        <td>Ingrese Modalidad Contrato </td>
                        <td><select class="borrar obligatorio" id="cboModalidadContratoPopUp"></select></td>
                    </tr>
                    <tr>
                        <td>Ingrese Foto</td>
                        <td><img id="imgFoto" width="150" height="100" style="border:1px"></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="file" value="" id="btnFoto"></td>
                    </tr>
                </table>
            </div>
            <div class="modal-footer">
                <button onclick="agregar()" id="btnAceptar" type="button" class="btn btn-success" data-dismiss="modal">Aceptar</button>
                <button id="btnCancelar" type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>                
            </div>
        </div>

    </div>
</div>



<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/jquery-ui.min.js"></script>
<script src="~/Scripts/Docente.js"></script>
<script src="~/Scripts/datatables.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
